{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["dom", "ES2020"],
    "types": ["puppeteer", "node"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "exclude": [
    "dist",
    "node_modules",
    "rollup.config.ts"
  ]
  // "include": ["ormconfig.json"]
}
